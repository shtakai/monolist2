<div class="container">
  <div class="container-inner inner-default clearfix">
    <% items.each do |item| %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            <%= original_image_tag(item) %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <% i = Item.find_by(item_code: item['itemCode']) %>
            <%= item_name(item) %>
          </p>
        </div>
        <div class="action clearfix">
          <%= render 'new_action', item: item, i: i  %>
        </div>
      </div>
    <% end %>
  </div>
</div>
